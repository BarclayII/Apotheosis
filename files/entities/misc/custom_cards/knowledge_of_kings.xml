		count_min="1"
		count_max="1"
		angular_velocity="0"
		gravity.y="0"
		scale.x="1.0"
		scale.y="1.0"
		randomize_lifetime.min="0.05"
		randomize_lifetime.max="0.05"
		scale_velocity.x="0"
		scale_velocity.y="0"
		randomize_velocity.min_x="0"
		randomize_velocity.max_x="0"
		randomize_velocity.min_y="1"
